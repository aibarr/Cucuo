<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".PrincipalFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#3F51B5"
        android:gravity="center">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Datos de la cuenta"
            android:id="@+id/textView00"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="16dp"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:background="#E8EAF6"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="36dp"
            android:text="Tu Saldo disponible para compras es:"
            android:id="@+id/tituloSaldo"
            android:inputType="number"
            android:textSize="18dp"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="36dp"
            android:text="30.000"
            android:textSize="18dp"
            android:gravity="center_horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="36dp"
            android:textSize="18dp"
            android:text="Tu limite mensual de compras es:"
            android:id="@+id/showLimit"
            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="30.000"
            android:id="@+id/saldoMensual"
            android:textSize="18dp"
            android:gravity="center_horizontal"
            android:inputType="number"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:textSize="24dp"
            android:text="Simular Compra"
            android:textAllCaps="false"
            android:id="@+id/simulCompra"
            android:layout_gravity="center"
            />
    </LinearLayout>

</LinearLayout>
