<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".PrincipalFragment">

    <TextView
        android:id="@+id/TextViewTituloSaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="Saldo diponible"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/accentColor"
        android:textSize="12dp"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/textViewSaldoDisponible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:paddingBottom="16dp"
        android:layout_below="@+id/TextViewTituloSaldo"
        android:gravity="center"
        android:textColor="@color/Color_Texto"
        android:textSize="16dp"
        android:hint="Saldo disponible"
        android:inputType="number"/>

    <ImageButton
        android:layout_marginTop="16dp"
        android:layout_marginLeft="64dp"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:text="New Button"
        android:id="@+id/ImageButtonEdit"
        android:elevation="10dp"
        android:layout_below="@+id/textViewSaldoDisponible"
        android:layout_alignParentLeft="true"
        android:src="@drawable/mas"
        android:background="@drawable/circle" />

    <ImageButton
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:text="New Button"
        android:id="@+id/ImageButtonAumentar"
        android:elevation="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/ImageButtonEdit"
        android:src="@drawable/edit"
        android:background="@drawable/circle" />

    <ImageButton
        android:layout_marginRight="64dp"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:text="New Button"
        android:id="@+id/ImageButtonRestar"
        android:elevation="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/ImageButtonEdit"
        android:src="@drawable/menos"
        android:background="@drawable/circle" />

    <Button
        android:layout_marginTop="16dp"
        android:id="@+id/simulCompra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ImageButtonEdit"
        android:background="@drawable/boton"
        android:layout_centerHorizontal="true"
        android:text="Simular Compra"
        android:textAllCaps="false"
        android:textColor="@color/Color_Texto_Boton"
        android:textSize="24dp" />
</RelativeLayout>
